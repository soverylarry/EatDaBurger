<div class="container">
    <h1>Eat-Da-Burger!</h1>

    <div class="row">
        <div class="col-md-6">
            <h2>Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <span> <strong>{{this.id}} - {{this.burger_name}}</strong></span>
                <button type="button" class="eatburger" id="eatbutton" data-id="{{this.id}}"
                    data-newDevoured="{{devour}}"><span>Eat Burger</span></button>
                <hr>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Eaten Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                <hr>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>

    <form class="create-form">

        <div class="form-group">
            <input type="text" id="newburger" name="name">
        </div>

        <button type="submit" id="addburger">Submit</button>
    </form>

    <p><strong>Enter a type of burger you want to eat and then click Submit.</strong></p>

</div>


